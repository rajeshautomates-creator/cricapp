# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Database
DATABASE_URL="postgresql://cricapp_user:cricapp_password@postgres:5432/cricapp_db?schema=public"

# JWT Secrets (IMPORTANT: Change these in production!)
JWT_ACCESS_SECRET="change-this-to-a-random-secret-key-minimum-32-characters"
JWT_REFRESH_SECRET="change-this-to-another-random-secret-key-minimum-32-characters"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Razorpay (Get from https://dashboard.razorpay.com/app/keys)
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"

# Application
PORT=4000
NODE_ENV="production"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Frontend API URL
NEXT_PUBLIC_API_URL="http://localhost:4000"
